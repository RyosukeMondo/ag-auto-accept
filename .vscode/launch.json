{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Run Ag-Accept (Main)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/ag_accept/main.py",
            "console": "internalConsole",
            "redirectOutput": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Debug Runner (Catch Import Errors)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_runner.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        }
    ]
}